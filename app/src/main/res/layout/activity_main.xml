<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Welcome Header -->
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Daily Water Summary or First Row -->
    <TextView
        android:id="@+id/textWaterSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get ready to complete your habits"
        android:textSize="16sp"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Checklist header -->
    <TextView
        android:id="@+id/textChecklistHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Today's Checklist"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingHorizontal="16dp"
        android:paddingTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/textWaterSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Checklist Recycler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textChecklistHeader"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDailyChecklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"/>

</androidx.constraintlayout.widget.ConstraintLayout>